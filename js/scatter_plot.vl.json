{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 700,
    "data": {
      "url": "https://raw.githubusercontent.com/nathanwsoe/COVID19_Cases_vs_Deaths/main/data/owid-covid-data_cleanedv2.csv"
    },
    "params": [
      {
        "name": "population_above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels":[
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.total_cases > 0"},
      {"filter": "datum.total_vaccinations > 0"},
      {"filter": "datum.population > population_above"},
      {"filter": "continent_selection == null || datum.continent == continent_selection"},
        {
          "calculate": "datum.total_cases_per_million / 10",
          "as": "Total Cases (per 100,000 population)"
        },
        {
          "calculate": "datum.total_vaccinations / datum.population * 100000",
          "as": "Total Vaccinations (per 100,000 population)"
        }
    ],
    "encoding": {
      "x": {
        "field": "total_cases",
        "type": "quantitative",
        "axis": {"tickCount": 8},
        "scale": {"type": "log", "domain": [1, 100000000]},
        "title": "Total Cases"
      },
      "y": {
        "field": "total_vaccinations",
        "type": "quantitative",
        "axis": {"tickCount": 9},
        "scale": {"type": "log", "domain": [1, 10000000000]},
        "title": "Total Vaccinations"
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["continent"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [50, 120, 200, 300, 400, 500]
            },
            "legend": {"format": ".1s"},
            "title": "Population"
          },
          "color": {
            "field": "continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#94bad4",
                "#377eb8",
                "#a65628"
              ]
            },
            "title": "Continent"
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.8},
            "value": 0.1
          },
          "tooltip": [
            {"field": "location", "type": "nominal", "title": "Country"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {"field": "total_cases", "type": "quantitative", "format": ",.2f", "title": "Total Cases"},
            {"field": "Total Cases (per 100,000 population)", "type": "quantitative", "format": ",.2f"},
            {"field": "total_vaccinations", "type": "quantitative", "format": ",.2f", "title": "Total Vaccinations"},
            {"field": "Total Vaccinations (per 100,000 population)", "type": "quantitative", "format": ",.2f"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -15,
          "fontSize": 10,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "location", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum.location == 'Brazil' || datum.location == 'Tanzania' || datum.location == 'New Zealand' || datum.location == 'Singapore' || datum.location == 'China' || datum.location == 'India' ||  datum.location == 'South Korea' ||  datum.location == 'Haiti'",
              "value": 1
            },
            "value": 0
          }
        }
      }
    ],
    "config": {
          "background": "#ddeefa"
        }
  }
